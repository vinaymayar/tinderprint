<div class="row" style="margin-top: 20px;">
  <div class="col-md-offset-3 col-md-6 col-xs-offset-1 col-xs-10">
    <p>
      <strong>
      <span><%= candidate.name %></span>
      <span class="pull-right"> <%= candidate.gender %> <%= candidate.age %></span>
      </strong>
    </p>
    <p>
      <span><%= candidate.bio %></span>
    </p>
    <div class="swipers">
      <a class="btn swipe glyphicon glyphicon-remove" id="swipe-left" role="button"></a>
      <a class="btn swipe glyphicon glyphicon-heart pull-right" id="swipe-right" role="button"></a>
    </div>
    <input type="hidden" id="candidate" value="<%= candidate._id %>">
  </div>
</div>

<script src="swipers.js"></script>
